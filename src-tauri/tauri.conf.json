{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app-debug",
  "version": "0.1.0",
  "identifier": "com.leoyon.tauri-app-debug",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build && node src-tauri/sidecar/nextjs-server/build-nextjs.js",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-app-debug",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/nextjs-server/*"
    ],
    "externalBin": [
      "binaries/node"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
